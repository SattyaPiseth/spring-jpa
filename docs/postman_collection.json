{
  "info": {
    "name": "spring-jpa API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "productId", "value": "" },
    { "key": "categoryId", "value": "" },
    { "key": "variantId", "value": "" },
    { "key": "attributeId", "value": "" },
    { "key": "nextCursor", "value": "" },
    { "key": "nextVariantCursor", "value": "" }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products (offset)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?page=0&size=20&sort=createdAt,desc",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "20" },
                { "key": "sort", "value": "createdAt,desc" }
              ]
            }
          }
        },
        {
          "name": "List Products (keyset first page)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?size=20&cursor=",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                { "key": "size", "value": "20" },
                { "key": "cursor", "value": "" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.nextCursor) pm.collectionVariables.set('nextCursor', json.nextCursor);"
                ]
              }
            }
          ]
        },
        {
          "name": "List Products (keyset next page)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?size=20&cursor={{nextCursor}}",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                { "key": "size", "value": "20" },
                { "key": "cursor", "value": "{{nextCursor}}" }
              ]
            }
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Variants",
      "item": [
        {
          "name": "List Variants (offset)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}/variants?page=0&size=20&sort=createdAt,desc",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}", "variants"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "20" },
                { "key": "sort", "value": "createdAt,desc" }
              ]
            }
          }
        },
        {
          "name": "List Variants (keyset first page)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}/variants?size=20&cursor=",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}", "variants"],
              "query": [
                { "key": "size", "value": "20" },
                { "key": "cursor", "value": "" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.nextCursor) pm.collectionVariables.set('nextVariantCursor', json.nextCursor);"
                ]
              }
            }
          ]
        },
        {
          "name": "List Variants (keyset next page)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}/variants?size=20&cursor={{nextVariantCursor}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}", "variants"],
              "query": [
                { "key": "size", "value": "20" },
                { "key": "cursor", "value": "{{nextVariantCursor}}" }
              ]
            }
          }
        },
        {
          "name": "Get Variant",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/variants/{{variantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["variants", "{{variantId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Attributes",
      "item": [
        {
          "name": "List Product Attributes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}/attributes",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}", "attributes"]
            }
          }
        },
        {
          "name": "List Variant Attributes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/variants/{{variantId}}/attributes",
              "host": ["{{baseUrl}}"],
              "path": ["variants", "{{variantId}}", "attributes"]
            }
          }
        }
      ]
    }
  ]
}
